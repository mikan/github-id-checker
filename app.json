{
  "name": "GitHub ID Checker",
  "description": "Checks organization requirements for the onboarding GitHub users",
  "repository": "https://github.com/mikan/github-id-checker",
  "logo": "https://github.com/mikan.png",
  "keywords": [
    "golang",
    "github"
  ],
  "env": {
    "ORG": {
      "description": "Name of GitHub organization to join"
    },
    "KEYWORD": {
      "description": "Required mail address suffix"
    },
    "POLICY_URL": {
      "description": "Privacy policy URL"
    },
    "CLIENT_ID": {
      "description": "GitHub OAuth Client ID"
    },
    "CLIENT_SECRET": {
      "description": "GitHub OAuth Client Secret"
    },
    "SEND_FROM": {
      "description": "FROM address of the notification email",
      "required": false
    },
    "SEND_TO": {
      "description": "TO address of the notification email",
      "required": false
    },
    "SMTP_USER": {
      "description": "SMTP Server authentication user",
      "required": false
    },
    "SMTP_PASSWORD": {
      "description": "SMTP Server authentication password",
      "required": false
    },
    "SMTP_SERVER": {
      "description": "SMTP Server address",
      "value": "smtp.gmail.com",
      "required": false
    },
    "SMTP_PORT": {
      "description": "SMTP Server port number",
      "value": "587",
      "required": false
    },
    "WEBHOOK": {
      "description": "Notification Webhook URL (Hangouts Chat recommended)"
    }
  }
}
